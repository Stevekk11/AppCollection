<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8"/>
    <meta name="viewport" content="width=device-width, initial-scale=1.0"/>
    <title>@ViewData["Title"] - App Collection</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css"/>
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.0/font/bootstrap-icons.css">
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true"/>
    <link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.2/css/all.min.css" rel="stylesheet">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/fullcalendar/3.10.2/fullcalendar.min.css" />

</head>
<body class="d-flex flex-column min-vh-100">
<header>
    <nav class="navbar navbar-expand-sm navbar-toggleable-sm navbar-light bg-white border-bottom box-shadow mb-3">
        <div class="container-fluid">
            <a class="navbar-brand fw-bold d-flex align-items-center" asp-area="" asp-controller="Home" asp-action="Index">
                <i class="bi bi-collection me-2"></i>
                Kolekce aplikací
            </a>
            <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target=".navbar-collapse"
                    aria-controls="navbarSupportedContent"
                    aria-expanded="false" aria-label="Toggle navigation">
                <span class="navbar-toggler-icon"></span>
            </button>
            <div
                class="navbar-collapse collapse d-sm-inline-flex justify-content-between align-items-center text-nowrap">
                <ul class="navbar-nav flex-grow-1 align-items-center">
                    <li class="nav-item d-flex align-items-center">
                        <a class="nav-link text-dark d-flex align-items-center" asp-area="" asp-controller="Home" asp-action="Index">
                            <i class="bi bi-house me-2"></i>
                            Domů
                        </a>
                    </li>
                    <li class="nav-item d-flex align-items-center">
                        <a class="nav-link text-dark d-flex align-items-center fw-bold" asp-controller="Search"
                           asp-action="Index">
                            <i class="bi bi-puzzle me-2"></i>
                            Křížovkářský slovník
                        </a>
                    </li>
                    <li class="nav-item d-flex align-items-center">
                        <a class="nav-link text-dark d-flex align-items-center" asp-area="" asp-controller="Home" asp-action="Privacy">
                            <i class="bi bi-shield-check me-2"></i>
                            Ochrana soukromí
                        </a>
                    </li>
                    <li class="nav-item d-flex align-items-center">
                        <a class="nav-link text-dark d-flex align-items-center" asp-area="" asp-controller="Home" asp-action="Clock">
                            <i class="bi bi-clock me-2"></i>
                            Slovní hodiny
                        </a>
                    </li>
                    <li class="nav-item d-flex align-items-center">
                        <a class="nav-link text-dark d-flex align-items-center" asp-controller="Document" asp-action="Index">
                            <i class="bi bi-file-earmark-text me-2"></i>
                            Moje dokumenty
                        </a>
                    </li>
                    <li class="nav-item d-flex align-items-center">
                        <a class="nav-link text-dark d-flex align-items-center" asp-controller="Document" asp-action="Gallery">
                            <i class="bi bi-images me-2"></i>
                            Galerie
                        </a>
                    </li>
                    <li class="nav-item d-flex align-items-center">
                        <a class="nav-link text-dark d-flex align-items-center" asp-controller="Events" asp-action="Calendar">Kalendář</a>
                    </li>
                    <li class="nav-item d-flex align-items-center">
                        <a class="nav-link text-dark d-flex align-items-center" asp-controller="Departures" asp-action="Index">
                            <i class="bi bi-bus-front me-2"></i>
                            Odjezdy PID
                        </a>
                    </li>
                    <div class="nav-item d-flex align-items-center">
                        <form asp-controller="Account" asp-action="Logout" method="post" class="d-inline"
                              id="logoutForm">
                            @Html.AntiForgeryToken()
                            <button class="btn btn-secondary d-flex align-items-center" type="submit">
                                <i class="bi bi-box-arrow-right me-2"></i>
                                Odhlásit se...
                            </button>
                        </form>
                    </div>
                </ul>
            </div>
        </div>
    </nav>
</header>
<div class="container flex-grow-1">
    <main role="main" class="pb-3">
        @RenderBody()
    </main>
</div>
<script src="~/lib/jquery/dist/jquery.min.js"></script>
<script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
<script src="https://cdnjs.cloudflare.com/ajax/libs/moment.js/2.29.1/moment.min.js"></script>
<script src="https://cdnjs.cloudflare.com/ajax/libs/fullcalendar/3.10.2/fullcalendar.min.js"></script>

<script src="~/js/site.js" asp-append-version="true"></script>
@await RenderSectionAsync("Scripts", required: false)
</body>
<footer class="footer mt-auto py-3 bg-black text-white border-top">
    <div class="container text-center">
        <span class="text-muted fw-bold">
            &copy; 2025 SPŠE Ječná - Kolekce aplikací
        </span>
    </div>
</footer>
</html>
