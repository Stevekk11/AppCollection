@model Login
@{
    ViewData["Title"] = "Registrace";
}
<link rel="stylesheet"/>

<div class="container w-25">
    <h2>@ViewData["Title"]</h2>
    <form asp-action="Register" method="post">
        <div class="mb-3">
            <label asp-for="Username" class="form-label"></label>
            <input asp-for="Username" class="form-control" />
            <span asp-validation-for="Username" class="text-danger"></span>
        </div>
        <div class="mb-3">
            <label asp-for="Password" class="form-label"></label>
            <input asp-for="Password" class="form-control" type="password" />
            <span asp-validation-for="Password" class="text-danger"></span>
        </div>
        <div class="mb-3">
            <label asp-for="Usertype" class="form-label">Typ uživatele</label>
            <select asp-for="Usertype" class="form-select">
                <option value="1">Admin</option>
                <option value="2">Normální</option>
            </select>
        </div>
        <button type="submit" class="btn btn-success">Vytvořit účet</button>
    </form>
    <p>Již máte účet? <a asp-controller="Account" asp-action="Login">Login</a></p>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}