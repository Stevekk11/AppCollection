@model DocumentViewModel

@{
    ViewData["Title"] = "Přehrávač skladeb";
}

<h2><i class="bi bi-music-note-list"></i> Přehrávač skladeb</h2>

@if (Model.Documents == null || !Model.Documents.Any())
{
    <div class="alert alert-info">Nemáte žádné audio soubory mezi dokumety.
        <a href="@Url.Action("Index")" class="btn btn-primary btn-sm ms-2">
            Nahrát první zvuk
        </a></div>
}
else
{
    <div class="list-group">
        @foreach (var file in Model.Documents)
        {
            <div class="list-group-item mb-4">
                <div class="d-flex align-items-center">
                    <i class="bi bi-music-note-beamed fs-2 me-3"></i>
                    <div class="flex-fill">
                        <strong>@file.FileName</strong>
                        <div
                            class="text-muted small">@file.UploadedAt.ToString("dd.MM.yyyy HH:mm") (@file.ContentType)
                        </div>
                        <div class="p-3 rounded bg-dark">
                            <audio id="audio_@file.Id" src="@Url.Action("Download", "Document", new { id = file.Id })"
                                   controls
                                   style="width: 100%; margin-top: 8px;">
                                Váš prohlížeč nepodporuje audio element.
                            </audio>
                        </div>
                    </div>
                </div>
            </div>
        }
    </div>
}
